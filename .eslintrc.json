{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:svelte/recommended"
    ],
    "overrides": [
        {
            "files": [
                "*.svelte"
            ],
            "parser": "svelte-eslint-parser",
            "parserOptions": {
                "parser": "@typescript-eslint/parser"
            }
        }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "project": [
            "./tsconfig.json"
        ],
        "extraFileExtensions": [
            ".svelte"
        ]
    },
    "plugins": [
        "@typescript-eslint", "import"
    ],
    "rules": {},
    "ignorePatterns": [
        "node_modules"
    ]
}